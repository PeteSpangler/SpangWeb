@model SpangWebDotNet.Models.Habits

@{
    ViewData["Title"] = "Edit Habits";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Habits</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Daily_Habit" class="control-label"></label>
                <input asp-for="Daily_Habit" class="form-control" />
                <span asp-validation-for="Daily_Habit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Positive_Negative_Neutral" class="control-label"></label>
                <input asp-for="Positive_Negative_Neutral" class="form-control" />
                <span asp-validation-for="Positive_Negative_Neutral" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
